<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/cursor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#FFFF0000"
            android:textColor="#FF000000"
            android:gravity="center_horizontal"
            android:text="Cursor Icon"
            android:textSize="30sp" />
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/split01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#FFFFFF00"
           		android:textColor="#FF000000"
                android:gravity="center_horizontal"
                android:text="SPLIT_01"
                android:textSize="30sp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/split02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#FFFFFF00"
           		android:textColor="#FF000000"
                android:gravity="center_horizontal"
                android:text="SPLIT_02"
                android:textSize="30sp"
                android:layout_weight="1" />
        </LinearLayout>        
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/resize01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#FF6699CC"
           		android:textColor="#FF000000"
                android:gravity="center_horizontal"
                android:text="D"
                android:textSize="30sp" 
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/resize02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#FF6699CC"
           		android:textColor="#FF000000"
                android:gravity="center_horizontal"
                android:text="V"
                android:textSize="30sp"
                android:layout_weight="1" />
            
            <TextView
                android:id="@+id/resize03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#FF6699CC"
           		android:textColor="#FF000000"
                android:gravity="center_horizontal"
                android:text="A_D"
                android:textSize="30sp"
                android:layout_weight="1" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/resize04"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="#FF6699CC"
           		android:textColor="#FF000000"
                android:gravity="center_horizontal"
                android:text="H"
                android:textSize="30sp" />
            
            <TextView
                android:id="@+id/move"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="#FF003333"
                android:gravity="center_horizontal"
                android:text="MOVE"
                android:textSize="30sp" />
            
			<TextView
                android:id="@+id/resize05"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="#FF6699CC"
           		android:textColor="#FF000000"
                android:gravity="center_horizontal"
                android:text="H"
                android:textSize="30sp" />
        </LinearLayout>		
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/resize06"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#FF6699CC"
           		android:textColor="#FF000000"
                android:gravity="center_horizontal"
                android:text="A_D"
                android:textSize="30sp" 
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/resize07"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#FF6699CC"
           		android:textColor="#FF000000"
                android:gravity="center_horizontal"
                android:text="V"
                android:textSize="30sp"
                android:layout_weight="1" />
            
            <TextView
                android:id="@+id/resize08"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#FF6699CC"
           		android:textColor="#FF000000"
                android:gravity="center_horizontal"
                android:text="D"
                android:textSize="30sp"
                android:layout_weight="1" />
        </LinearLayout>
        
        <TextView
                android:id="@+id/circle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#FFFF00FF"
           		android:textColor="#FF000000"
                android:gravity="center_horizontal"
                android:text="CIRCLE"
                android:textSize="30sp" />
		
		<LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            
		    <TextView
                android:id="@+id/scroll01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="#FFCC99FF"
           		android:textColor="#FF000000"
                android:gravity="center_horizontal"
                android:text="NW"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/scroll02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="#FFCC99FF"
           		android:textColor="#FF000000"
                android:gravity="center_horizontal"
                android:text="N"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/scroll03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="#FFCC99FF"
           		android:textColor="#FF000000"
                android:gravity="center_horizontal"
                android:text="NE"
                android:textSize="30sp" />
        </LinearLayout>
        
		<LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/scroll04"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="#FFCC99FF"
           		android:textColor="#FF000000"
                android:gravity="center_horizontal"
                android:text="W"
                android:textSize="30sp" />
            
            <TextView
                android:id="@+id/hide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="#FF330033"
                android:gravity="center_horizontal"
                android:text="HIDE"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/scroll05"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="#FFCC99FF"
           		android:textColor="#FF000000"
                android:gravity="center_horizontal"
                android:text="E"
                android:textSize="30sp" />
        </LinearLayout>
        
		<LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/scroll06"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="#FFCC99FF"
           		android:textColor="#FF000000"
                android:gravity="center_horizontal"
                android:text="SW"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/scroll07"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="#FFCC99FF"
           		android:textColor="#FF000000"
                android:gravity="center_horizontal"
                android:text="S"
                android:textSize="30sp" />
            
            <TextView
                android:id="@+id/scroll08"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="#FFCC99FF"
           		android:textColor="#FF000000"
                android:gravity="center_horizontal"
                android:text="SE"
                android:textSize="30sp" />
        </LinearLayout>		
        
		<Button
            android:id="@+id/custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"            
            android:layout_marginRight="10dp"            
            android:layout_marginTop="5dp"            
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal"
            android:text="CUSTOM BUTTON"
            android:textSize="30sp" />
    </LinearLayout>

</ScrollView>
